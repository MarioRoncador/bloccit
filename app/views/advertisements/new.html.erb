<h1>New Advertisement</h1>

  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="from-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
      </div>

      <div class="from-group">
        <%= f.label :body %>
        <%= f.text_area :body,  class: 'form-control', placeholder: "Enter ad body" %>
      </div>

      <div class="from-group">
        <%= f.label :price %>
        <%= f.text_area :price,  class: 'form-control', placeholder: "Enter ad price" %>
      </div>
      
      <div class="from-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
</div>
